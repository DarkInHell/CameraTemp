<Page x:Class="CameraTemp.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CameraTemp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Left">
            <ComboBox x:Name="Combo" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" SelectionChanged="Combo_SelectionChanged" Margin="10"/>
            <Button x:Name="Photo"      Content="Фото"  Width="120" Height="20" Margin="10" Click="Photo_Click"/>
            <Button x:Name="StartRec"   Content="Старт" Width="120" Height="20" Margin="10" Click="StartRec_Click"/>
            <Button x:Name="StopRec"    Content="Стоп"  Width="120" Height="20" Margin="10" Click="StopRec_Click"/>
        </StackPanel>
    </Grid>
</Page>
