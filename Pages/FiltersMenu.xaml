<Page x:Class="CameraTemp.Pages.FiltersMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CameraTemp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="FiltersMenu">

    <Grid>
        <StackPanel Margin="10">
            <CheckBox Margin="10" x:Name="RotationX"   Content="Разворот по Х" Checked="RotationX_Checked" IsManipulationEnabled="True"/>
            <CheckBox Margin="10" x:Name="RotationY"   Content="Разворот по У" Checked="RotationY_Checked" IsManipulationEnabled="True"/>
            <CheckBox Margin="10" x:Name="InvertCheck" Content="Инверсия" Checked="InvertCheck_Checked" IsManipulationEnabled="True"/>
            <CheckBox Margin="10" x:Name="BlackWhite"  Content="ЧБ" Checked="BlackWhite_Checked" IsManipulationEnabled="True"/>
        </StackPanel>
    </Grid>
</Page>
