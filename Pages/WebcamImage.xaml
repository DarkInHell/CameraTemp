<Page x:Class="CameraTemp.Pages.WebcamImage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CameraTemp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="340" d:DesignWidth="800"
      Title="WebcamImage">

    <Grid>
        <Image x:Name="Img" Margin="10"/>
        <DockPanel>
            <Slider x:Name="Zoom" DockPanel.Dock="Right" Value="1" Minimum="0.1" Maximum="10" Width="25" ValueChanged="ZoomChanged" Orientation="Vertical" MouseWheel="Zoom_MouseWheel"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" Name="scrollViewer" VerticalScrollBarVisibility="Auto"></ScrollViewer>
        </DockPanel>
    </Grid>
</Page>
