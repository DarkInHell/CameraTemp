<Window x:Class="CameraTemp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CameraTemp"
        mc:Ignorable="d"
        Closed="Window_Closed"
        Title="MainWindow" Height="800" Width="800">
    <Grid Background="#FF564141">
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="ImageFrame" Height="340" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Width="100" Content="Photo" Click="Button_Click"/>
            <Button Width="100" Content="Filters" Click="Button_Click_1"/>
        </StackPanel>
        <Frame x:Name="Menu" Grid.Row="2"/>

    </Grid>
</Window>
