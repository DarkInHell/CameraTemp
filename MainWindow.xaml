<Window x:Class="CameraTemp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CameraTemp"
        mc:Ignorable="d"
        Closed="Window_Closed"
        Title="MainWindow" Height="460" Width="800">
    <Grid Background="#FF564141">
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image x:Name="Img" Grid.Row="0" HorizontalAlignment="Left" Height="339"/>
        <ComboBox x:Name="Combo" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" SelectionChanged="Combo_SelectionChanged"/>

    </Grid>
</Window>
